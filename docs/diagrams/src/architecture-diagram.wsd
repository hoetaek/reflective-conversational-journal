@startuml architecture-diagram
skinparam defaultTextAlignment center
skinparam dpi 300
skinparam padding 2

skinparam componentStyle rectangle

skinparam rectangle {
    FontSize 14
    FontStyle bold
}

skinparam component {
    BackgroundColor #FFFFFF
    BorderColor #333333
}

top to bottom direction

' === Layers (Component Diagram Style) ===

rectangle "UI Layer" {
    component "User Interface" as UI
}

rectangle "Application Layer" {
    component "Workflow" as Workflow
    component "Persona" as Persona
    component "Reflection" as Reflection
}

rectangle "Service Layer" {
    component "Context Provider" as Context
}

rectangle "Data Layer" {
    database "Storage" as DB
}

' === Dependencies ===

UI ..> Workflow
Workflow ..> Persona
Workflow ..> Reflection
Workflow ..> Context
Persona ..> Context
Reflection ..> Context
Context ..> DB

@enduml
