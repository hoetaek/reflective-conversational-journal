{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/load-profile-journals.js"
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/load-memory.js"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/load-current-time.js"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Skill(journal)",
      "Skill(profile)",
      "Skill(weekly)",
      "Skill(reflect)"
    ],
    "deny": [],
    "ask": []
  }
}
