{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/check_profile.js"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/load-current-time.js"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "SlashCommand(/journal)",
      "SlashCommand(/profile)"
    ],
    "deny": [],
    "ask": []
  }
}
